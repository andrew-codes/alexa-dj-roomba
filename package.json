{
  "name": "@andrew-codes/smith-simms-family-alexa",
  "version": "0.0.0",
  "private": true,
  "description": "Alexa apps for smith-simms family.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist && rm src/public/js/bundle.js",
    "build/src/server/alexa-apps": "cp src/alexa-apps/jarvis/package.json dist/alexa-apps/jarvis/package.json",
    "prebuild/src/server": "npm run clean",
    "build/src/server": "babel src --out-dir dist",
    "postbuild/src/server": "npm run build/src/server/alexa-apps",
    "prebuild/src/client": "npm run clean",
    "build/src/client": "webpack",
    "build/src": "npm run build/src/client && npm run build/src/server",
    "deployment/production/start": "cd dist && NODE_ENV=production nodemon server.js",
    "deployment/production/build": "npm run build/src && docker-compose -f docker-compose.yml -f docker-compose-mongo.yml build",
    "predeployment/production": "npm run deployment/production/build",
    "deployment/production": "docker-compose up",
    "start": "cross-env NODE_ENV=development node dev/dev-server.js",
    "start/db/build": "docker-compose -f docker-compose-mongo.yml build",
    "start/db": "docker-compose -f docker-compose-mongo.yml up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-codes/alexa-jarvis.git"
  },
  "keywords": [
    "roomba",
    "alexa",
    "echo",
    "home automation",
    "automation",
    "roowifi"
  ],
  "author": "Andrew Smith <andrew@andrew.codes>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrew-codes/alexa-jarvis/issues"
  },
  "homepage": "https://github.com/andrew-codes/alexa-jarvis#readme",
  "dependencies": {
    "alexa-app": "^2.3.4",
    "alexa-app-server": "^2.3.1",
    "axios": "^0.15.3",
    "nodemon": "^1.11.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-react-display-name": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.20.0",
    "cross-env": "^3.1.3",
    "react-hot-loader": "^3.0.0-beta.6",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.14.0"
  }
}
